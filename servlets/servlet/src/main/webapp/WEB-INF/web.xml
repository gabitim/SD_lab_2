<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
    <display-name>Web Component App</display-name>

    <!--Bank stateful servlet-->
    <servlet>
        <servlet-name>ProcessBankOperation</servlet-name>
        <servlet-class>ProcessBankOperationServlet</servlet-class>
    </servlet>

    <!--Student servlets-->
    <servlet>
        <servlet-name>ProcessStudent</servlet-name>
        <servlet-class>ProcessStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FetchStudentList</servlet-name>
        <servlet-class>FetchStudentListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateStudent</servlet-name>
        <servlet-class>UpdateStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveStudent</servlet-name>
        <servlet-class>RemoveStudentServlet</servlet-class>
    </servlet>

    <!--Course servlets-->
    <servlet>
        <servlet-name>ProcessCourse</servlet-name>
        <servlet-class>course.ProcessCourseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCourse</servlet-name>
        <servlet-class>course.UpdateCourseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FetchCoursesList</servlet-name>
        <servlet-class>course.FetchCoursesListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveCourse</servlet-name>
        <servlet-class>course.RemoveCourseServlet</servlet-class>
    </servlet>

    <!--Bank stateful servlet-mapping-->
    <servlet-mapping>
        <servlet-name>ProcessBankOperation</servlet-name>
        <url-pattern>/process-bank-operation</url-pattern>
    </servlet-mapping>

    <!--Student servlet-mapping-->
    <servlet-mapping>
        <servlet-name>ProcessStudent</servlet-name>
        <url-pattern>/process-student</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FetchStudentList</servlet-name>
        <url-pattern>/fetch-student-list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateStudent</servlet-name>
        <url-pattern>/update-student</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveStudent</servlet-name>
        <url-pattern>/delete-student</url-pattern>
    </servlet-mapping>

    <!--Course servlet-mapping-->
    <servlet-mapping>
        <servlet-name>ProcessCourse</servlet-name>
        <url-pattern>/process-course</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FetchCoursesList</servlet-name>
        <url-pattern>/fetch-courses-list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCourse</servlet-name>
        <url-pattern>/update-course</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveCourse</servlet-name>
        <url-pattern>/delete-course</url-pattern>
    </servlet-mapping>


</web-app>
